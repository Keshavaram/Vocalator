        app:elevation="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/buttonMutiply"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <Button
        android:id="@+id/button0"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_config"
        android:fadingEdge="horizontal|vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="listener"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="normal"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:elevation="0dp"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/buttonDot"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/button_config"
        android:fadingEdge="horizontal|vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="listener"
        android:text="."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF6E40"
        android:textSize="40sp"
        android:textStyle="normal"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:elevation="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/buttonDivision"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/button_config"
        android:fadingEdge="horizontal|vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="ops"
        android:text="/"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF6E40"
        android:textSize="40sp"
        android:textStyle="normal"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:elevation="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
        app:layout_constraintEnd_toStartOf="@+id/buttonEquals"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <Button
        android:id="@+id/buttonAdd"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_config"
        android:fadingEdge="horizontal|vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="ops"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF6D00"
        android:textSize="40sp"
        android:textStyle="normal"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:elevation="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <Button
        android:id="@+id/buttonSub"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_config"
        android:fadingEdge="horizontal|vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="ops"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF6E40"
        android:textSize="40sp"
        android:textStyle="normal"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:elevation="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <Button
        android:id="@+id/buttonMutiply"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_config"
        android:fadingEdge="horizontal|vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="ops"
        android:text="*"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF6E40"
        android:textSize="40sp"
        android:textStyle="normal"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:elevation="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonEquals"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_config"
        android:fadingEdge="horizontal|vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:onClick="ops"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF6E40"
        android:textSize="40sp"
        android:textStyle="normal"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:elevation="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDivision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <Button
        android:id="@+id/buttonClear"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_config"
        android:fadingEdge="horizontal|vertical"
        android:onClick="clearOps"
        android:text="AC"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF6D00"
        android:textSize="20sp"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button7" />

    <TextView
        android:id="@+id/voiceDetected"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:isScrollContainer="false"
        android:maxWidth="200dp"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="horizontal|vertical"
        android:scrollHorizontally="true"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonClear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageButton
        android:id="@+id/voice"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_mic"
        android:onClick="trigger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivision"
        tools:ignore="SpeakableTextPresentCheck" />

